---
const { variant, href } = Astro.props;

const Tag = href ? "a" : "button";

// let Tag = "button";

// if (href) {
//   Tag = "a";
// }
---

<Tag data-variant={variant} {href}>
  <slot />
</Tag>

<style>
  a,
  button {
    padding: 1rem;
    border: none;
    border-radius: 5px;
    margin-top: 10px;
    font-size: 1em;
    cursor: pointer;
    width: 100%;
    text-decoration: none;
  }

  [data-variant="primary"] {
    background: var(--primaryPrimaryColorBackgroundButtonPrimary);
    color: #fff;
  }
  [data-variant="primaryHover"] {
    background-color: var(--primaryPrimaryColorBackgroundButtonPrimaryHover);
    color: #fff;
  }
  [data-variant="secondary"] {
    background-color: var(--secondarySecondaryColorBackgroundButtonDefault);
    color: #fff;
  }
  [data-variant="secondaryHover"] {
    background-color: var(--secondarySecondaryColorBackgroundButtonHover);
    color: #fff;
  }
</style>
