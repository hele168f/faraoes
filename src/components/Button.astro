---
const { variant, href } = Astro.props;

const Tag = href ? "a" : "button";

// let Tag = "button";

// if (href) {
//   Tag = "a";
// }
---

<Tag data-variant={variant} {href}>
  <slot />
</Tag>

<style>
  a,
  button {
    padding: 1rem;
  }

  [data-variant="primary"] {
    background: var(--colorPrimaryButton);
    color: #fff;
    padding: 10px;
    border: none;
    border-radius: 5px;
    margin-top: 10px;
    font-size: 1em;
    cursor: pointer;
    width: 100%;
  }
  [data-variant="secondary"] {
    color: var(--secondary-color);
    background: #fff;
  }
</style>
