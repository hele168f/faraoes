---
import Button from "../components/Button.astro";
const { title, beskrivelse, pris, imgPath, undertitel, button, levering } = Astro.props;
---

<article>
  <div class="product">
    <img src={imgPath} alt="" height="350" width="350" />
  </div>
  <div class="single">
    <div class="single-title">
        <p class="productTitle">{title}</p>
        <p class="productUnder">{undertitel}</p>
    </div>

    <div class="interaction"></div>

    <div class="single_descripton">
        <p class="beskrivelse">{beskrivelse}</p>
    </div>

    <div class="single-grid-1">
        <p class="pris">{pris}</p>
        <p class="levering">{levering}</p>
    </div>
    <div class="single-grid-2">
      <div id="counter" class="counter">
        <button onclick="decrementCounter()" class="counter-btn">-</button>
        <span id="counter-value" class="counter-value">0</span>
        <button onclick="incrementCounter()" class="counter-btn">+</button>
      </div>
      <div>
        <Button href="/" variant="primary">LÃ¦g i kurv</Button>
      </div>
    </div>
  </div>
</article>

<style>
  article {
    display: grid;
    grid-template-columns: 1fr 2fr;
    max-width: 700px;
    border-radius: 10px;
    padding: 20px;
    margin: auto;
    background-color: white;
  }
  img {
    width: 100%;
  }
  .product {
    place-content: center;
  }
  .single {
    max-width: 500px;
    padding: 20px;
  }
  .single-title {
    margin-bottom: 64px;
  }
  .single_descripton {
    margin-bottom: 64px;
  }
  .single-grid-1 {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid grey;
    margin-bottom: 16px;
  }
  .single-grid-2 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    justify-content: space-between;
    align-items: center;
  }
  /*
  .knap {
    background-color: #3e8e41;
    color: white;
    border: none;
    border-radius: 5px;
    margin-top: 10px;
    font-size: 1rem;
    cursor: pointer;
    width: 100%;
    height: 40px;
  }
  */
  .knap:hover {
    background-color: #4caf50;
  }

  h1 {
    font-size: 2.441rem;
    margin-bottom: -3%;
  }
  h2 {
    font-size: 1.953rem;
  }

  p {
    font-size: 1rem;
    max-width: 64vh;
  }
  .counter {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 120px;
    height: 40px;
    border-radius: 5px;
    background-color: #ffffff;
    color: #000000;
    border: solid grey;
  }

  .counter-btn {
    font-size: 20px;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background-color: #ffffff;
    color: #000000;
    border: none;
    outline: none;
    cursor: pointer;
  }

  .counter-value {
    font-size: 1rem;
  }
</style>
