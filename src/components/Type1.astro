---
const { h1, h2, h3, h4, h5, h6, p } = Astro.props;
---

<div class="card">
    <div class="h1">{h1}</div>

    <div class="h2">{h2}</div>

    <div class="h3">{h3}</div>

    <div class="h4">{h4}</div>

    <div class="h5">{h5}</div>

    <div class="h6">{h6}</div>

    <div class="p">{p}</div>

  </div>


  <style>
    .h1 {
        font-size: var(--text4xl);
    }

    .h2 {
        font-size: var(--text3xl);
    }

    .h3 {
        font-size: var(--text2xl);
    }

    .h4 {
        font-size: var(--textXl);
    }

    .h5 {
        font-size: var(--textLg);
    }

    .h6 {
        font-size: var(--textBase);
    }
    .p {
        font-size: var(--textSm);
    }
  </style>